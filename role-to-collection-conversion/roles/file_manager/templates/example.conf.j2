# Configuration generated by Ansible

[main]
log_level = {{ file_manager_log_level | default('info') }}
max_files = {{ file_manager_max_files | default(100) }}
backup_enabled = {{ file_manager_backup_enabled | default(true) | lower }}

[paths]
data_dir = {{ file_manager_data_dir | default('/var/lib/file_manager') }}
log_dir = {{ file_manager_log_dir | default('/var/log/file_manager') }}

[security]
allow_symlinks = {{ file_manager_allow_symlinks | default(false) | lower }}
file_permissions = {{ file_manager_default_permissions | default('0644') }}

{% if file_manager_custom_settings is defined %}
[custom]
{% for key, value in file_manager_custom_settings.items() %}
{{ key }} = {{ value }}
{% endfor %}
{% endif %}